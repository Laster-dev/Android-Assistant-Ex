<Window x:Class="搞机助手Ex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:搞机助手Ex.Views"
        mc:Ignorable="d"
        Title="Loading" Height="300" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="False"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" SnapsToDevicePixels="true" StrokeThickness="1" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#20000000" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main content area -->
            <Border Grid.Row="0" Grid.RowSpan="3" Background="#F5F5F5" CornerRadius="15">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- App title and logo -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="搞机助手Ex" FontSize="22" FontWeight="SemiBold" Foreground="#333333"/>
                    </StackPanel>

                    <!-- Loading animation -->
                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Spinner -->
                        <Canvas Grid.Row="0" Width="80" Height="80" HorizontalAlignment="Center">
                            <Ellipse Width="80" Height="80" StrokeThickness="4" Stroke="#EEEEEE"/>
                            <Path x:Name="LoadingPath" Stroke="#499FDA" StrokeThickness="4" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="40,2">
                                            <ArcSegment Size="38,38" Point="40,78" IsLargeArc="True" SweepDirection="Clockwise"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                                <Path.Triggers>
                                    <EventTrigger RoutedEvent="Path.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="LoadingPath"
                                                    Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                    From="0" To="360" Duration="0:0:1.5" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Path.Triggers>
                                <Path.RenderTransform>
                                    <RotateTransform CenterX="40" CenterY="40"/>
                                </Path.RenderTransform>
                            </Path>
                        </Canvas>

                        <!-- Loading text -->
                        <TextBlock Grid.Row="1" Text="Loading..." FontSize="18" Foreground="#333333" HorizontalAlignment="Center" Margin="0,20,0,0"/>

                        <!-- Progress info text -->
                        <TextBlock x:Name="StatusText" Grid.Row="2" Text="正在初始化..." FontSize="14" Foreground="#888888" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </Grid>

                    <!-- Footer with version -->
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <TextBlock Text="v1.0.0" Foreground="#AAAAAA" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Close button -->
            <Button Grid.Row="0" Content="×" FontSize="18" Width="30" Height="30" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"
                    Foreground="#666666" Background="Transparent" BorderThickness="0"
                    Cursor="Hand" Panel.ZIndex="100">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderBrush="Transparent" Background="Transparent" SnapsToDevicePixels="true" CornerRadius="15">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="Center" Margin="0" RecognizesAccessKey="True" SnapsToDevicePixels="True" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Foreground" Value="#F94346"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Foreground" Value="#F94346"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>